<div class="card">
  <div class="card-body">
    <%= form_with(model: product) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <%= form.label :image_url %>
            <%= form.text_field :image_url, class: "form-control" %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= form.label :asin %>
            <%= form.text_field :asin, class: "form-control", required: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_area :title, class: "form-control", required: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <div class="form-group">
            <%= form.label :price %>
            <%= form.number_field :price, class: "form-control" %>
          </div>
        </div>

        <div class="col-3">
          <div class="form-group">
            <%= form.label :currency_symbol %>
            <%= form.text_field :currency_symbol, class: "form-control" %>
          </div>
        </div>

        <div class="col-3">
          <div class="form-group">
            <%= form.label :customer_review %>
            <%= form.text_field :customer_review, class: "form-control" %>
          </div>
        </div>

        <div class="col-3">
          <div class="form-group">
            <%= form.label :review_count %>
            <%= form.text_field :review_count, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= form.submit 'Save', class: 'btn btn-success', disable_with: "Submitting..." %>

        <% if form.object.id %>
          <%= link_to 'Show', product, class: 'btn btn-primary' %>
        <% end %>
        <%= link_to 'Back', products_path, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>